{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "clean": {
      "dependsOn": ["^clean"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "cdk.out/**"],
      "env": [
        "NODE_ENV",
        "PORT",
        "API_PORT",
        "SERVICE_PORT",
        "AWS_CDK",
        "CDK_DEFAULT_ACCOUNT",
        "CDK_DEFAULT_REGION"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {},
    "typecheck": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
