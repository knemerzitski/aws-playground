{
  "name": "echo-service",
  "version": "1.0.0",
  "private": "true",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist/* .eslintcache",
    "build": "vite-node scripts/build.ts src/handler.ts --outfile dist/index.mjs",
    "prettier": "prettier --write --ignore-unknown src",
    "eslint": "eslint . --cache --max-warnings 0",
    "type-check": "tsc --noEmit --project tsconfig.tsc.json",
    "lint": "npm run type-check && npm run eslint"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.150",
    "aws-lambda": "^1.0.7",
    "esbuild": "^0.25.6"
  }
}
